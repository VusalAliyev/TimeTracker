@using TimeTracker.Domain.Entities;
@model IEnumerable<Reminder>

@{
    ViewData["Title"] = "Home Page";
}

<div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="mb-3">
                        <label for="to-input" class="form-label">To</label>
                        <input type="text" class="form-control" id="to-input" placeholder="Enter recipient">
                    </div>
                    <div class="mb-3">
                        <label for="content-input" class="form-label">Content</label>
                        <input type="text" class="form-control" id="content-input" placeholder="Enter content">
                    </div>
                    <div class="mb-3">
                        <label for="select-input" class="form-label">Send with</label>
                        <select class="form-select" id="select-input" aria-label="Send To">
                            <option selected>Select sending option</option>
                            <option value="telegram">Telegram</option>
                            <option value="email">Email</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <h1 class="text-center mb-4">To-Do List</h1>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Add a new task">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Open Form</button>
                </div>
            </div>
        </div>

        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center" data-bs-toggle="modal" data-bs-target="#taskModal">
                Task 1
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-warning">Update</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center" data-bs-toggle="modal" data-bs-target="#taskModal">
                Task 2
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-warning">Update</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center" data-bs-toggle="modal" data-bs-target="#taskModal">
                Task 3
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-warning">Update</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </li>
        </ul>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="taskModalLabel">Task 1 Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Task 1 description goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


</div>
